{% extends 'base.html.twig' %}
{% block body %}
    <script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/stupidtable/1.1.3/stupidtable.min.js"></script>
    <table id="list" class="table table-hover">
    <thead>
        <th data-sort="string">Nom</th>
        <th data-sort="string">Prenom</th>
        <th data-sort="string">Nom de Compte</th>
        <th data-sort="string">Admin ?</th>
    </thead>
        {%  for user in liste%}
            <tr>
                <td>
                    {{ user.nom }}
                </td>
                <td>
                    {{ user.prenom }}
                </td>
                <td>
                    {{ user.username }}
                </td>
                <td>
                    {%  if "ROLE_ADMIN" in user.roles %}
                        Admin
                    {% else %}
                        Pas admin
                    {% endif %}
                </td>
            </tr>
        {% endfor %}
</table>
    <script>
        $(document).ready(function($) {
            $("#list").stupidtable();
        });
    </script>
{% endblock %}