{% extends 'base.html.twig' %}
{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/stupidtable/1.1.3/stupidtable.min.js"></script>
    <table id="list" class="table table-hover">
        <thead>
        <th data-sort="string">NOM</th>
        <th data-sort="string">Date Création</th>
        <th data-sort="int">Quantité Émise</th>
        <th></th>
        <th></th>
        </thead>
        {%  for cryp in fav %}
            <tr>
                <td>
                    {{ cryp.nom }}
                </td>
                <td>
                    {{ cryp.dateCreaToString }}
                </td>
                <td>
                    {{ cryp.qteEmise }}
                </td>
            </tr>
        {% endfor %}
    </table>
    <script>
        $(document).ready(function($) {
            $("#list").stupidtable();
        });
    </script>
{% endblock %}